node{
    
    def mavenName = tool name:"maven3.9.6"
    stage("cloning git project"){
        git branch: 'development', credentialsId: '567', url: 'https://github.com/aniruddhapatil9/maven-web-application.git'
    }
    
    stage("Build the project"){
        sh "$mavenName/bin/mvn clean package"
    }
    
    stage("generate sonar report"){
        sh "$mavenName/bin/mvn sonar:sonar"
    }
    
    stage("build Artificate"){
        sh "$mavenName/bin/mvn deploy"
    }
}
